<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--Section TextView style-->
    <style name="Section">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/section_margin_right</item>
        <item name="android:layout_marginRight">@dimen/section_margin_right</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    <!--Title TextView style-->
    <style name="Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/title_magin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/title_margin_left</item>
        <item name="android:layout_marginStart">@dimen/title_margin_left</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!--Style for author TextView-->
    <style name="Author">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/author_margin_left</item>
        <item name="android:layout_marginStart">@dimen/author_margin_left</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!--Style for date TextView-->
    <style name="Date">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/date_margin_top</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_marginLeft">@dimen/date_margin_left</item>
        <item name="android:layout_marginStart">@dimen/date_margin_left</item>
    </style>
</resources>